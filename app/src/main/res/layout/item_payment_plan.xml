<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">




        <RelativeLayout
            android:id="@+id/rlSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_cornered_bg"
            android:padding="@dimen/_15sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtPlaneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Basic"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/txtPlaneAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif"
                android:text="1 Rs."
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtValidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPlaneName"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:text="1 Day"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/txtDurationInHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPlaneAmount"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="sans-serif"
                android:text="2 Hours"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <View
                android:id="@+id/viewSeparator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txtValidity"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/imgSpacLine1"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@id/viewSeparator"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_gpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewSeparator"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@id/imgSpacLine1"
                android:fontFamily="sans-serif"
                android:text="GetForce GTX 1660 6GB GPU"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/imgSpacLine2"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@id/imgSpacLine1"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_cpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgSpacLine1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@id/imgSpacLine1"
                android:fontFamily="sans-serif"
                android:text="8 CPU"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/imgSpacLine3"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@id/imgSpacLine2"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgSpacLine2"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@id/imgSpacLine1"
                android:fontFamily="sans-serif"
                android:text="12GB Ram"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/imgSpacLine4"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@id/imgSpacLine3"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_ssd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgSpacLine3"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@id/imgSpacLine1"
                android:fontFamily="sans-serif"
                android:text="400 SSD"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/imgSpacLine5"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone"
                android:layout_below="@id/imgSpacLine4"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_mbp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgSpacLine4"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@id/imgSpacLine1"
                android:fontFamily="sans-serif"
                android:visibility="gone"
                android:text="Upstream 50 MBP"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:id="@+id/txtSubscribe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@id/imgSpacLine5"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/payment_button_bg"
                android:gravity="center"
                android:text="@string/subscribe"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />


        </RelativeLayout>

</RelativeLayout>